<%= form_with(model: submission, class: "contents") do |form| %>
  <div class="flex items-center">
    <span class="font-medium text-lg mr-2">Community: </span>
    <%=
      select_tag(
        :community,
        options_for_select([['JfasfasfasfasS', 1], ['Ruby', 2]]),
        class: 'select bg-base-content text-base-100',
      )
    %>
  </div>

  <div class="divider"></div>

  <div>
    <ul class="tabs tabs-boxed h-16 font-bold">
      <li class="tab basis-1/3 h-full">
        <%= inline_svg_tag 'icons/text', class: 'h-6 w-6 mr-1' %>
      </li>
      <li class="tab tab-active basis-1/3 h-full text-xl">
        <%= inline_svg_tag 'icons/image', class: 'h-6 w-6 mr-1' %> / <%= inline_svg_tag 'icons/video', class: 'h-6 w-6 mx-1' %> </li>
      <li class="tab basis-1/3 h-full">
        <%= inline_svg_tag 'icons/link', class: 'h-6 w-6 mr-1' %>
      </li>
    </ul>
  </div>

  <div class="form-control mb-3">
    <%= form.label :title, class: 'label font-medium' %>
    <%= form.text_field :title, class: 'input bg-base-content text-base-100' %>
  </div>

  <div class="form-control mb-3" data-content="text">
    <%= form.label :body, class: 'label font-medium' %>
    <%=
      form.text_area :body,
                     rows: 8,
                     class: 'textarea  bg-base-content text-base-100'
    %>
  </div>

  <div class="form-control mb-5" data-content="url">
    <%= form.label :url, class: 'label font-medium' %>
    <%=
      form.text_field :url,
                      class: 'input bg-base-content text-base-100',
                      type: 'url'
    %>
  </div>

  <div data-content="image-video">
    <div class="form-control mb-3">
      <%= form.label :submission_image, class: 'label font-medium flex justify-center items-center basis-46 grow-0 shrink-0 h-12 bg-base-content rounded-xl text-base-100 hover:bg-base-200 hover:text-base-content transform duration-300 cursor-pointer' do %>
        <%= inline_svg_tag 'icons/image', class: 'h-8 w-8 mr-2' %>
        <span class=" font-medium">Upload Image</span>
      <% end %>
      <%= form.file_field :submission_image, class: 'hidden' %>
    </div>

    <div class="divider">OR</div>

    <div class="form-control mb-3">
      <%= form.label :submission_video, class: 'label font-medium flex justify-center items-center w-46 h-12 bg-base-content rounded-xl text-base-100 hover:bg-base-200 hover:text-base-content transform duration-300 cursor-pointer' do %>
        <%= inline_svg_tag 'icons/video', class: 'h-8 w-8 mr-2' %>
        <span class="font-medium">Upload Video</span>
      <% end %>
      <%= form.file_field :submission_video, class: 'hidden' %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

