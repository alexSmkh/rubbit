<% content_for :javascript_includes do %>
  <%= javascript_pack_tag 'tabs', 'data-turbolinks-track': 'reload' %>
<% end %>

<% content_for :community_label, "Edit Submission" %>

<%= content_for :primary_content do %>
  <div class="mx-auto my-12 py-2 md:py-0 w-full">
    <h1 class="font-bold text-4xl mb-6">Editing submission</h1>

    <%= render 'form', submission: @submission %>

    <%= link_to 'Show this submission', @submission, class: 'btn btn-link' %>
    <%=
      link_to 'Back to submissions', submissions_path, class: 'btn btn-link'
    %>
  </div>
<% end %>

<%= content_for :secondary_content do %>
  <div class="mt-48 mx-auto w-full">
    <%= render 'guidelines' %>
  </div>
<% end %>

<%= render 'basic_layout' %>
