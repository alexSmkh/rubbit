<%= content_for :page_title do %>
  <%= render 'page_title', title: 'Submissions' %>
<% end %>

<%= content_for :primary_content do %>
  <% if @submissions.exists? %>
    <div id="submissions" class="w-full">
      <%=
        link_to 'New Submission',
                new_submission_path,
                class: 'btn btn-primary mb-6 md:hidden w-full'
      %>
      <%= render @submissions %>
    </div>
  <%else%>
    <div
      class="w-full border border-base-content p-10 rounded-xl shadow shadow-base-content hover:shadow-base-content hover:shadow-lg transition duration-300"
    >
      <div class="flex items-center justify-center mb-6">
        <%=
          inline_svg_tag 'icons/empty',
                         class:
                           'h-20 w-20 text-base-content mr-2 animate-bounce'
        %>
        <span class="text-3xl font-bold text-base-content"
          >Oh.. There's nothing here yet</span
        >
      </div>
      <% if user_signed_in? %>
        <%=
          link_to 'Create Submission',
                  new_submission_path,
                  class: 'btn btn-primary w-full'
        %>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= content_for :secondary_content do %>
  <%= link_to new_submission_path, class: 'btn btn-primary w-full mb-4' do %>
    <%= inline_svg_tag 'icons/add', class: 'w-8 h-8 mr-1' %>
    Create Submission
  <% end %>

  <%= link_to communities_path, class: 'btn btn-link' do %>
    See all communities
  <% end %>
<% end %>

<%= render 'basic_layout' %>
