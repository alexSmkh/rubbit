<%= form_with(model: community, class: "contents") do |form| %>
  <div class="form-control mb-3">
    <%= form.label :name, class: 'label font-medium' %>
    <%= form.text_field :name, class: 'input bg-base-content text-base-100' %>
    <%= render 'form_error_messages', resource: community, field: :name %>
  </div>

  <div class="form-control mb-3">
    <%= form.label :title, class: 'label font-medium' %>
    <%= form.text_field :title, class: 'input bg-base-content text-base-100' %>
    <%= render 'form_error_messages', resource: community, field: :title %>
  </div>

  <div class="form-control mb-3">
    <%= form.label :description, class: 'label font-medium' %>
    <%=
      form.text_area :description,
                     rows: 4,
                     class: 'textarea bg-base-content text-base-100'
    %>
    <%= render 'form_error_messages', resource: community, field: :description %>
  </div>

  <div class="form-control mb-5">
    <%= form.label :sidebar, class: 'label font-medium' %>
    <%=
      form.text_area :sidebar,
                     rows: 4,
                     class: 'textarea bg-base-content text-base-100'
    %>
    <%= render 'form_error_messages', resource: community, field: :sidebar %>
  </div>

  <div class="inline">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
