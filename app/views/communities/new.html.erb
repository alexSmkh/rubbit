<% content_for :community_label, 'Create Community' %>

<%= content_for :primary_content do %>
  <div class="mx-auto md:w-2/3 w-full mt-12">
    <h1 class="font-bold text-4xl">New community</h1>

    <%= render 'form', community: @community %>

    <%=
      link_to 'Back to communities', communities_path, class: 'btn btn-link px-1'
    %>
  </div>
<% end %>

<%= content_for :secondary_content do %>
  <div
    class="mt-32 mb-12 border border-base-content rounded-xl shadow-md shadow-base-content hover:shadow-lg hover:shadow-base-content overflow-hidden trasform-color duration-300"
  >
    <%= image_tag 'community_sidebar' %>

    <div class="p-4">
      <p class="font-bold text-lg xl:text-xl mb-2">
        Create a new community on Rubbit
      </p>
      <p class="italic mb-2">Each community requires the following:</p>
      <ul class="list-disc list-inside decoration-base-content">
        <li>Name</li>
        <li>Title</li>
        <li>Description</li>
      </ul>
    </div>
  </div>
<% end %>

<%= render 'basic_layout' %>
