<div class="flex">
  <% if author_of?(comment) %>
    <div class="flex items-center space-x-1 md:space-x-2">
        <%= link_to edit_submission_comment_path(comment.submission, comment), remote: true do %>
          <%=
            inline_svg_tag 'icons/edit',
                           class:
                             'h-4 w-4 text-base-content hover:text-primary transform-color duration-300'
          %>
        <% end %>

      <%= link_to submission_comment_path(comment.submission, comment), method: :delete, data: { confirm: 'Are you shure?'} do %>
        <%=
          inline_svg_tag 'icons/delete',
                         class:
                           'h-4 w-4 text-base-content hover:text-primary transform-color duration-300'
        %>
      <% end %>
    </div>
  <% end %>
</div>
