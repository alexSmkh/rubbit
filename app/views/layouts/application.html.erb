<!DOCTYPE html>
<html data-theme="dark">
  <head>
    <title>Rubbit</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%=
      stylesheet_link_tag 'tailwind', 'inter-font', 'data-turbo-track': 'reload'
    %>

    <%=
      stylesheet_link_tag 'application',
                          media: 'all',
                          'data-turbolinks-track': 'reload'
    %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="h-screen">
    <%# ====== Navigation ====== %>

    <div
      class="container mx-auto py-2 px-2 md:px-4 flex justify-between items-center border-b border-base-content"
    >
      <%# ====== Logo and categories ====== %>
      <div class="flex flex-none items-center">
        <%= link_to root_path do %>
          <%= inline_svg_tag('icons/reddit') %>
        <% end %>

        <% if user_signed_in? %>
          <select class="select select-bordered w-32 sm:w-52 ml-2 md:ml-4">
            <option value="golang" selected>Golang</option>
            <option value="c#">C#</option>
            <option value="books">Books</option>
          </select>
        <% end %>
      </div>

      <%# ======= Search bar ======= %>

      <div
        class="flex-1 px-2 md:px-12  text-base-content  focus-within:text-base-100"
      >
        <div class="relative">
          <%=
            inline_svg_tag(
              'icons/search',
              class: 'hidden sm:block absolute bottom-3 left-3 h-6 w-6',
            )
          %>

          <input
            type="text"
            placeholder="Search..."
            class="input input-bordered bg-base-200 focus:bg-base-content placeholder-base-content focus:placeholder-base-100 focus:text-base-100 pl-2 sm:pl-10 w-full"
          />
        </div>
      </div>

      <% if user_signed_in? %>
        <%# ======= Dropdown ======= %>
        <div class="dropdown dropdown-hover dropdown-end flex-none">
          <div tabindex="0" class=" btn hidden md:flex items-center">
            fasfasfs
          </div>
          <div
            tabindex="0"
            class="btn btn-circle flex md:hidden text-3xl items-center"
          >
            F
          </div>
          <ul
            tabindex="0"
            class="p-2 shadow menu dropdown-content bg-base-content  text-base-100 font-medium rounded-box w-52"
          >
            <li class="hover:bg-base-300 hover:text-base-content rounded-lg">
              <%= link_to '#' do %>
                <%=
                  inline_svg_tag(
                    'icons/account',
                    class: 'h-6 w-6 hover:text-base-content mr-2',
                  )
                %>
                Account
              <% end %>
            </li>
            <li class="hover:bg-base-300 hover:text-base-content rounded-lg">
              <%= link_to '#' do %>
                <%=
                  inline_svg_tag(
                    'icons/settings',
                    class: 'h-6 w-6 hover:text-base-content mr-2',
                  )
                %>
                Settings
              <% end %>
            </li>
            <li class="hover:bg-base-300 hover:text-base-content rounded-lg">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <%=
                  inline_svg_tag(
                    'icons/logout',
                    class: 'h-6 w-6 hover:text-base-content mr-2',
                  )
                %>
                Logout
              <% end %>
            </li>
          </ul>
        </div>
      <% else %>
        <%# ======= SignIn / Login buttons ======= %>
        <div class="md:space-x-2 flex-none">
          <%=
            link_to 'Login', new_user_session_path, class: 'btn btn-primary'
          %>
          <%=
            link_to 'Sign up',
                    new_user_registration_path,
                    class: 'btn btn-link text-base-content px-1'
          %>
        </div>
      <% end %>
    </div>

    <%= yield %>
    <main class="container mx-auto mt-28 px-5 flex">
    
      
    </main>
  </body>
</html>
