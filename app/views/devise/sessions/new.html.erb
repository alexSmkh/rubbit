<%= content_for :devise_form do %>
  <h2 class="text-4xl font-bold text-center mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-control mb-3">
      <%= f.label :email, class: 'label font-medium' %>
      <%=
        f.email_field :email,
                      autofocus: true,
                      autocomplete: 'email',
                      class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages', resource: resource, field: :email
      %>
    </div>

    <div class="form-control mb-3">
      <%= f.label :password, class: 'label font-medium' %>
      <%=
        f.password_field :password,
                         autocomplete: 'current-password',
                         class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :password
      %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="cursor-pointer flex items-center flex-start">
        <%= f.label :remember_me, class: 'font-medium pl-1 pr-2' %>
        <%= f.check_box :remember_me, class: 'checkbox checkbox-primary' %>
      </div>
    <% end %>

    <div class="actions mt-6">
      <%= f.submit 'Log in', class: 'btn btn-primary mt-6 w-full' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
<% end %>

<%= render 'devise/shared/form_wrap' %>
