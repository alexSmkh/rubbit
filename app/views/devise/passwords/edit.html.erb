<%= content_for :devise_form do %>
  <h2 class="text-4xl font-bold text-center mb-6">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-control mb-3">
      <%= f.label :password, 'New password', class: 'label font-medium' %>
      <%=
        f.password_field :password,
                         autofocus: true,
                         autocomplete: 'new-password'
                         class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :password
      %>
      <% if @minimum_password_length %>
        <%=
          render 'devise/shared/input_label',
                 text: "#{@minimum_password_length} characters minimum",
                 classes: 'text-info'
        %>
      <% end %>
    </div>

    <div class="form-control mb-3">
      <%=
        f.label :password_confirmation,
                'Confirm new password',
                class: 'label font-medium'
      %>
      <%=
        f.password_field :password_confirmation,
                         autocomplete: 'new-password',
                         class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :password_confirmation
      %>
    </div>

    <div class="actions">
      <%= f.submit 'Change my password', class: 'btn btn-primary mt-6 w-full' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
<% end %>

<%= render 'devise/shared/form_wrap' %>
