<%= content_for :devise_form do %>
  <h2 class="text-4xl font-bold text-center mb-6">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-control mb-3">
      <%= f.label :email, class: 'label font-medium' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input' %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :email
      %>
    </div>

    <div class="actions">
      <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary mt-6 w-full' %>
    </div>
  <% end %>

  <div class="flex justify-center mt-2">
    <%= render 'devise/shared/links' %>
  </div>
<% end %>

<%= render 'devise/shared/form_wrap' %>
