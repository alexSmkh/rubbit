<%= content_for :devise_form do %>
  <h2 class="text-4xl font-bold text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-control mb-3">
      <%= f.label :email, class: 'label font-medium' %>
      <%=
        f.email_field :email,
                      autofocus: true,
                      autocomplete: 'email',
                      class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages', resource: resource, field: :email
      %>
    </div>

    <div class="form-control mb-3">
      <%= f.label :password, class: 'label font-medium' %>
      <%=
        f.password_field :password, autocomplete: 'new-password', class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :password
      %>
      <% if @minimum_password_length %>
        <%=
          render 'devise/shared/input_label',
                 text: "#{@minimum_password_length} characters minimum",
                 classes: 'text-info'
        %>
      <% end %>
    </div>

    <div class="form-control mb-3">
      <%= f.label :password_confirmation, class: 'label' %>
      <%=
        f.password_field :password_confirmation,
                         autocomplete: 'new-password',
                         class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :password_confirmation
      %>
    </div>

    <div class="actions">
      <%= f.submit 'Sign up', class: 'btn btn-primary mt-6 w-full' %>
    </div>
  <% end %>

  <div class="self-center btn btn-link">
    <%= render 'devise/shared/links' %>
  </div>
<% end %>

<%= render 'devise/shared/form_wrap' %>
