<%= content_for :devise_form do %>
  <h2 class="text-4xl font-bold text-center mb-6">
    Edit <%= resource_name.to_s.humanize %>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-control mb-3">
      <%= f.label :email, class: 'label font-medium' %>
      <%=
        f.email_field :email,
                      autofocus: true,
                      autocomplete: 'email',
                      class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages', resource: resource, field: :email
      %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="form-control mb-3">
      <%= f.label :password, class: 'label font-medium' %>
      <%=
        f.password_field :password, autocomplete: 'new-password', class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :password
      %>
      <% if @minimum_password_length %>
        <%=
          render 'devise/shared/input_label',
                 text: "#{@minimum_password_length} characters minimum",
                 classes: 'text-info'
        %>
      <% end %>
      <%=
        render 'devise/shared/input_label',
               text: "leave blank if you don't want to change it",
               classes: 'text-info'
      %>
    </div>

    <div class="form-control mb-3">
      <%= f.label :password_confirmation, class: 'label font-medium' %>
      <%=
        f.password_field :password_confirmation,
                         autocomplete: 'new-password',
                         class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :password_confirmation
      %>
    </div>

    <div class="form-control mb-3">
      <%= f.label :current_password, class: 'label font-medium' %>
      <%=
        f.password_field :current_password,
                         autocomplete: 'current-password',
                         class: 'input'
      %>
      <%=
        render 'devise/shared/error_messages',
               resource: resource,
               field: :current_password
      %>
      <%=
        render 'devise/shared/input_label',
               text: 'we need your current password to confirm your changes',
               classes: 'text-info'
      %>
    </div>

    <div class="actions">
      <%= f.submit 'Update', class: 'btn btn-primary mt-6 w-full' %>
    </div>
  <% end %>

  <div class="mt-4">
    <span class="font-semibold">Unhappy?</span>

    <%=
      link_to 'Cancel my account',
              registration_path(resource_name),
              class: 'btn btn-link text-error',
              data: {
                confirm: 'Are you sure?',
              },
              method: :delete
    %>
  </div>
<% end %>

<%= render 'devise/shared/form_wrap' %>
